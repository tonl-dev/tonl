{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "\"\"\"", "close": "\"\"\"" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""],
    ["\"\"\"", "\"\"\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*):",
      "end": "^\\s*$"
    }
  }
}
