{
  "name": "tonl-vscode",
  "displayName": "TONL Language Support",
  "description": "Complete language support for TONL (Token-Optimized Notation Language) with syntax highlighting, IntelliSense, document explorer, and validation",
  "version": "1.0.0",
  "publisher": "tonl-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "tonl",
    "data",
    "serialization",
    "llm",
    "token optimization",
    "json alternative",
    "data format",
    "syntax highlighting",
    "intellisense",
    "validation"
  ],
  "icon": "resources/tonl-icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:tonl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tonl",
        "aliases": [
          "TONL",
          "tonl"
        ],
        "extensions": [
          ".tonl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tonl",
        "scopeName": "source.tonl",
        "path": "./syntaxes/tonl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "tonl.validateDocument",
        "title": "TONL: Validate Document"
      },
      {
        "command": "tonl.formatDocument",
        "title": "TONL: Format Document"
      },
      {
        "command": "tonl.showDocumentTree",
        "title": "TONL: Show Document Tree"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tonl-explorer",
          "title": "TONL Explorer",
          "icon": "resources/tonl-icon.svg"
        }
      ]
    },
    "views": {
      "tonl-explorer": [
        {
          "id": "tonlDocumentTree",
          "name": "Document Tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "@vscode/vsce package"
  },
  "dependencies": {
    "tonl": "file:.."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tonl-dev/tonl.git",
    "directory": "vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/tonl-dev/tonl/issues"
  },
  "homepage": "https://tonl.dev",
  "author": {
    "name": "Ersin Koc",
    "email": "ersin@tonl.dev",
    "url": "https://github.com/ersinkoc"
  },
  "license": "MIT",
  "markdown": "github",
  "qna": "https://github.com/tonl-dev/tonl/discussions"
}
